{
  "extends": "../../tsconfig.base.json",
  "include": ["./src", "./types", "../../configuration/types"],
  "exclude": [
    "./lib",
    "./esm",
    "./cjs",
    "**/*.story.tsx",
    "**/*.test.tsx",
    "**/*.test.ts",
    "**/styles.api.ts",
    "src/components/*/demos/*",
    "src/demos.ts"
  ],
  "compilerOptions": {
    "rootDir": "src",
    "baseUrl": ".",
    "outDir": "lib",
    "declaration": true,
    "declarationMap": true,
    "declarationDir": "lib",
    "composite": true,
    "paths": {
      "@coengageui/core": ["../coengageui-core/src"],
      "@coengageui/dates": ["../coengageui-dates/src"],
      "@coengageui/hooks": ["../coengageui-hooks/src"],
      "@coengageui/prism": ["../coengageui-prism/src"],
      "@coengageui/dropzone": ["../coengageui-dropzone/src"],
      "@coengageui/notifications": ["../coengageui-notifications/src"],
      "@coengageui/modals": ["../coengageui-modals/src"],
      "@coengageui/rte": ["../coengageui-rte/src"],
      "@coengageui/labs": ["../coengageui-labs/src"]
    }
  },
  "references": [
    { "path": "../coengageui-core" },
    { "path": "../coengageui-dates" },
    { "path": "../coengageui-hooks" },
    { "path": "../coengageui-prism" },
    { "path": "../coengageui-dropzone" },
    { "path": "../coengageui-notifications" },
    { "path": "../coengageui-modals" },
    { "path": "../coengageui-rte" },
    { "path": "../coengageui-labs" }
  ]
}
