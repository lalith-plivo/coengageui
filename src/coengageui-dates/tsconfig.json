{
  "extends": "../../tsconfig.base.json",
  "include": ["./src", "./types", "../../configuration/types"],
  "exclude": ["./lib", "./esm", "./cjs"],
  "compilerOptions": {
    "rootDir": "src",
    "baseUrl": ".",
    "outDir": "lib",
    "declaration": true,
    "declarationMap": true,
    "declarationDir": "lib",
    "composite": true,
    "paths": {
      "@coengageui/core": ["../coengageui-core/src"],
      "@coengageui/hooks": ["../coengageui-hooks/src"],
      "@coengageui/storybook": ["../coengageui-storybook/src"],
      "@coengageui/tests": ["../coengageui-tests/src"]
    }
  },
  "references": [
    { "path": "../coengageui-core" },
    { "path": "../coengageui-hooks" },
    { "path": "../coengageui-storybook" },
    { "path": "../coengageui-tests" }
  ]
}
