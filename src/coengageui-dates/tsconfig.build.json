{
  "extends": "../../tsconfig.base.json",
  "include": ["./src", "./types", "../../configuration/types"],
  "exclude": [
    "./lib",
    "./esm",
    "./cjs",
    "**/*.story.tsx",
    "**/*.test.tsx",
    "**/*.test.ts",
    "**/styles.api.ts",
    "src/components/*/demos/*",
    "src/demos.ts"
  ],
  "compilerOptions": {
    "rootDir": "src",
    "baseUrl": ".",
    "outDir": "lib",
    "declaration": true,
    "declarationMap": true,
    "declarationDir": "lib",
    "composite": true,
    "paths": {
      "@coengageui/core": ["../coengageui-core/src"],
      "@coengageui/hooks": ["../coengageui-hooks/src"],
      "@coengageui/tests": ["../coengageui-tests/src"]
    }
  },
  "references": [
    { "path": "../coengageui-core" },
    { "path": "../coengageui-hooks" },
    { "path": "../coengageui-tests" }
  ]
}
